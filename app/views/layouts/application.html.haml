!!! HTML

%html
  %head
    %meta{:charset => 'utf-8'}
    %title goodbre.ws
    = stylesheet_link_tag    'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #top-bar
      #top-bar-left
        #logo= logo_link
      #top-bar-right
        #search
        #nav
      .clear

    #container
      = yield

    #footer
      © 
      %a{ :href => '/' } goodbre.ws
      2011-2012 • 
      %a{ :href => '/about' } About
      •
      %a{ :href => '/privacy' } Privacy
      •
      %a{ :href => '/terms' } Terms

    - if notice
      #bottom.notice= notice
    - elsif alert
      #bottom.alert= alert
